@using App.Domain.EF
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApp.ViewModels.ExerciseIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Exercises.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercises.First().Desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercises.First().Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercises.First().ExerciseCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercises.First().ExerTarget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercises.First().ExerGuide)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Exercises) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExerciseCategory!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExerTarget!.MuscleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExerGuide!.Link)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
